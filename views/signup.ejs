<body>
  <header class="navbar">
    <a class="home" href="/"><img class="logo" src="public/logo/Logo.png" alt="logo" /></a>
    <nav>
        <ul class="nav_links">
            <li class="nav_items"><a href="search">Search</a></li>
            <li class="nav_items"><a href="about_us">About Us</a></li>
        </ul>
    </nav>
    <a class="login" href="login"><button>Log in</button></a>
</header>

  <div class="container mx-auto mt-4">
    <h1>Sign Up</h1>
    
    <form action="/sign-up" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email">
      </div>
      <div class="mb-3">
        <label for="FirstName" class="form-label">First name</label>
        <input class="form-control" id="FirstName" name="FirstName">
      </div>
      <div class="mb-3">
        <label for="LastName" class="form-label">Last name</label>
        <input class="form-control" id="LastName" name="LastName">
      </div>
      <div class="mb-3">
        <label for="UserName" class="form-label">Username</label>
        <input class="form-control" id="UserName" name="UserName">
      </div>
      <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" class = "form-control" id="Password" name="Password">
      </div>
      <div class="signup-button-block">
        <button type="submit" class="btn btn-primary">Sign Up</button>
      </div>
    </form>
    <div class="go_login">
      <p class="mt-4">
        Have an account? <a class="login_col" href="/login">Login</a>
      </p>
  </div>
  </div>
</body>
